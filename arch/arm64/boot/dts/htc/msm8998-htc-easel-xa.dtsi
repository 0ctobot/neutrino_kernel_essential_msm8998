#include <dt-bindings/interrupt-controller/irq.h>

&tlmm {
	bcm15602_pins {
		bcm15602_pins_default: bcm15602_pins_default {
			mux {
				pins = "gpio25", "gpio26", "gpio91";
				function = "gpio";
			};

			config {
				pins = "gpio25", "gpio26", "gpio91";
				drive-strength = <2>;
				bias-disable;
			};
		};
	};
};

&i2c_9 {
	bcm15602@8 {
		compatible = "brcm,bcm15602";
		reg = <0x8>;

		interrupt-parent = <&tlmm>;
		interrupts = <26 IRQ_TYPE_EDGE_FALLING>;
		interrupt-names = "bcm15602_intb";

		pinctrl-names = "default";
		pinctrl-0 = <&bcm15602_pins_default>;

		bcm,pon-gpio = <&tlmm 25 0x00>;
		bcm,intb-gpio = <&tlmm 26 0x00>;
		bcm,resetb-gpio = <&tlmm 91 0x00>;

		bcm15602_gpio: gpio {
			compatible = "brcm,bcm15602-gpio";
			gpio-controller;
			#gpio-cells = <2>;
		};

		bcm15602_thermal: sensor {
			compatible = "brcm,bcm15602-thermal";
			#thermal-sensor-cells = <0>;
		};
	};
};
